/**
 * Sourced from http://blog.javascripting.com/2015/09/07/fine-tuning-airbnbs-eslint-config/
 * with further modifications as required
 * https://github.com/airbnb/javascript/tree/master/react
 */
{
  "extends": [
    "airbnb",
    "../.eslintrc"
  ],
  "env": {
    "mocha": true
  },
  "rules": {
    "max-len": [1, 120, 2, { "ignoreComments" : true}],
    "quote-props": [1, "consistent-as-needed"],
    "no-cond-assign": [2, "except-parens"],
    "radix": 0,
    "space-infix-ops": 0,
    "default-case": 0,
    "no-else-return": 0,
    "no-param-reassign": 0,
    "quotes": 0,
    "no-var": 0,
    "prefer-arrow-callback": 0,
    "space-before-function-paren": 0,
    "comma-dangle": 0,
    "func-names": 0,
    "no-unused-vars": 0,
    "no-unused-expressions": 0
  }
}
